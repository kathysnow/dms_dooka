.myBtnStyle {
  display: inline-block;
  border-radius: 0 16px 0 16px;
  background-color: #3dabff;
  background-image: linear-gradient(180deg, #2da4ff 0%, #c182b8 90%, #fb6d97 100%);
  font-weight: 800;
  border: 3px solid #e9f1fd;
  padding: 2px 3px;
  font-size: 9px;
}
.myBtnStyle .btnText {
  border-radius: 0  10px 0 10px;
  background-color: #d8f0ff;
  background-image: linear-gradient(180deg, #e1f4ff 0%, #c3e7fe 100%);
  color: #0087f2;
  padding: 0 10px 0 8px;
  box-shadow: 0 0 0 1px #ffffff;
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
}
