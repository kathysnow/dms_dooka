        </view>
      </view>

      <view class="right">
        <view class="cileBg">
          <view class="before"></view>
        </view> 
        
        <view class="containerTotal">
          <ec-canvas id="topEcharts" canvas-id="topEcharts" ec="{{ecData}}"></ec-canvas>
        </view>
        <view class="containerDoo">
          <canvas id="dooImg" style="width:160px;height:120px" type="2d"></canvas>
        </view>
